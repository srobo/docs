source 'https://rubygems.org'

gem 'rake'
gem 'kramdown'
# jekyll depends on kramdown-parser-gfm, but fails to declare it
gem 'kramdown-parser-gfm'
# Pin to the version used on GitHub Pages
gem 'jekyll', '~> 3'
gem 'jekyll-redirect-from'

# For testing output
gem 'html-proofer', '~> 4'

# Avoid polling on windows
gem 'wdm', '>= 0.1.0'
